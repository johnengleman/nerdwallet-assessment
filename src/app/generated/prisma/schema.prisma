generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma" // Custom output path
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean
  priority    Int?
  createdAt   DateTime @default(now())
}
